<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/right_message_text_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="14dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_seen_ticks"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_chat"
        app:layout_constraintTop_toTopOf="@+id/tv_chat"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat"/>

    <TextView
        android:id="@+id/tv_chat_time_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_chat"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat"
        android:gravity="end"
        android:textSize="12sp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:alpha="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
